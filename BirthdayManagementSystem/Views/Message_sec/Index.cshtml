@model IEnumerable<BirthdayManagementSystem.Models.Message>

@{
    ViewBag.Title = "Index";
     Layout = "~/Views/Shared/_Layout_Secretaire.cshtml";
}

<h2>Liste</h2>

<p>
    @Html.ActionLink("Nouveau", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titre)
        </th>
        <th>
            Corps du message
        </th>
        <th>
           Corps du message 2
        </th>
        <th>
            Singulier/Pluriel
        </th>
        <th>
           Type Message
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CorpsMessage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CorpsMessage2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombrePersonne.IdNombrePersonne)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypeMessage.Label)
        </td>
        <td>
            @Html.ActionLink("Modifier", "Edit", new { id=item.IdMessage }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdMessage }) |
            @Html.ActionLink("Supprimer", "Delete", new { id=item.IdMessage })
        </td>
    </tr>
}

</table>
