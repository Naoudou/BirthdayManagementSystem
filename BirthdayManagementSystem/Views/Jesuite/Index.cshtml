@model IEnumerable<BirthdayManagementSystem.Models.Jesuite>

@{
    ViewBag.Title = "Index";
}

<h2>Liste</h2>

<p>
    @Html.ActionLink("Ajouter", "Create")
</p>

<!-- begin row -->
<div class="row">

    <!-- begin col-10 -->
    <div class="col-md-12">
        <!-- begin panel -->
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                </div>
                <h4 class="panel-title">Liste des compagnons</h4>
            </div>

            <div class="panel-body">
                <table id="data-table" class="table table-striped table-bordered">
                    <thead>
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.NomComplete)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.Telephone)
                                </th>*@
                            <th>
                                Date Naissance
                            </th>
                            <th>
                                Entrée Noviciat
                            </th>
                            <th>
                                Premier Voeux
                            </th>
                            <th>
                                Ordination
                            </th>
                            <th>
                                Dernier Voeux
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.NomComplete)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.Telephone)
                                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateNassance)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EntreeNoviciat)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PremierVoeux)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ordination)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DernierVoeux)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.IdJesuite }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.IdJesuite }) |
                                    @Html.ActionLink("Supprimer", "Delete", new { id = item.IdJesuite })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- end panel -->
    </div>
    <!-- end col-10 -->
</div>
<!-- end row -->